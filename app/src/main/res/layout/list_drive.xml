<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    android:elevation="8dp"
    app:cardElevation="8dp"
    android:layout_margin="10dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        >
    >
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="3dp"
            android:gravity="right"
            android:textAlignment="gravity"
            tools:ignore="MissingConstraints">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/drive_LBL_fCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:minLines="1"
            android:text="MOVIE_ACTORS"
            android:layout_marginStart="8dp"
            android:textSize="11sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/drive_LBL_fStreet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/drive_LBL_fCity"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:minLines="1"
            android:text="MOVIE_ACTORS"
            android:layout_marginStart="8dp"
            android:textSize="11sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/drive_LBL_eCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/drive_LBL_fStreet"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:minLines="1"
            android:text="MOVIE_TITLE"
            android:textSize="11sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/drive_LBL_eStreet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_below="@id/drive_LBL_eCity"
            android:minLines="1"
            android:text="MOVIE_ACTORS"
            android:layout_marginStart="8dp"
            android:textSize="11sp" />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/drive_LBL_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_centerInParent="true"
            android:minLines="1"
            android:textColor="#FFFF00"
            android:text="MOVIE_ACTORS"
            android:shadowColor="@color/black"
            android:shadowRadius="2"
            android:textSize="14sp" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:id="@+id/layout0"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="30dp"
            tools:ignore="MissingConstraints">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/drive_LBL_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_alignParentEnd="true"
            android:minLines="1"
            android:text="MOVIE_ACTORS"
            android:layout_marginRight="8dp"
            android:textSize="16sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/drive_LBL_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_below="@id/drive_LBL_name"
            android:ellipsize="end"
            android:maxLines="1"
            android:minLines="1"
            android:layout_alignParentEnd="true"
            android:text="MOVIE_TITLE"
            android:textSize="16sp" />
        </androidx.appcompat.widget.LinearLayoutCompat>

    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>
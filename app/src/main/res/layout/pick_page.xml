<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true"
    tools:context=".ThePick">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"

        android:orientation="vertical">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/map"
                style="@style/shadoweffect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:text="map"
                android:textColor="@color/yellow"
                android:textSize="50dp"
                android:textStyle="bold" />

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottie_marker"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:scaleType="fitCenter"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/marker"
                app:lottie_speed="1.2"
                tools:ignore="MissingClass" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <FrameLayout
            android:id="@+id/frame2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="30dp"
            android:layout_weight="1"
            android:background="@drawable/rounded" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/pass_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_search"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="left"
                android:layout_marginRight="5dp"
                android:backgroundTint="@color/yellow"
                android:text="search"
                android:textSize="19dp"
                app:cornerRadius="60dp"
                app:icon="@drawable/glass"
                app:rippleColor="@color/yellowWhite" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_cancel"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="right"
                android:layout_marginLeft="5dp"
                android:backgroundTint="@color/yellow"
                android:text="cancel"
                android:textSize="19dp"
                app:cornerRadius="60dp"
                app:icon="@drawable/cancel"
                app:rippleColor="@color/yellowWhite" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/driver_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:rippleColor="@color/yellowWhite">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/break_driver"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="left"
                android:layout_marginRight="5dp"
                android:backgroundTint="@color/yellow"
                android:text="break"
                android:textSize="19dp"
                app:cornerRadius="60dp"
                app:icon="@drawable/coffee_break"
                app:rippleColor="@color/yellowWhite" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/break_return"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="left"
                android:layout_marginRight="5dp"
                android:backgroundTint="@color/yellow"
                android:text="return"
                android:textSize="19dp"
                app:cornerRadius="60dp"
                app:icon="@drawable/coffee_break"
                app:rippleColor="@color/yellowWhite" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_take_drive"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="left"
                android:layout_marginRight="5dp"
                android:backgroundTint="@color/yellow"
                android:text="take_drive"
                android:textSize="19dp"
                app:cornerRadius="60dp"
                app:icon="@drawable/take_drive"
                app:rippleColor="@color/yellowWhite" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_pick"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="left"
                android:layout_marginRight="5dp"
                android:backgroundTint="@color/yellow"
                android:text="pick"
                android:textSize="19dp"
                app:cornerRadius="60dp"
                app:icon="@drawable/pick"
                app:rippleColor="@color/yellowWhite" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_cancel_driver"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="right"
                android:layout_marginLeft="5dp"
                android:backgroundTint="@color/yellow"
                app:rippleColor="@color/yellowWhite"
                android:text="cancel"
                android:textSize="19dp"
                app:cornerRadius="60dp"
                app:icon="@drawable/cancel" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/driver_sec_layout"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/watch_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/border"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/hours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:text="00:"
                    android:textColor="@color/yellow"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/min"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="00:"
                    android:textColor="@color/yellow"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/sec"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:text="00"
                    android:textColor="@color/yellow"
                    android:textSize="30dp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <TextView
                android:id="@+id/cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:text="00"
                android:textColor="@color/yellow"
                android:textSize="30dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_stop_driver"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="right"
                android:layout_marginLeft="5dp"
                android:backgroundTint="@color/yellow"
                android:text="stop"
                android:textSize="19dp"
                app:cornerRadius="60dp"
                app:rippleColor="@color/yellowWhite"
                app:icon="@drawable/stop" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </androidx.appcompat.widget.LinearLayoutCompat>


</RelativeLayout>